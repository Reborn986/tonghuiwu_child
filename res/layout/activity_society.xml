<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/society_bg_bg"
    tools:context=".society">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:background="@drawable/society_bg"
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-84dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/society_bg"
                android:scaleType="fitXY"
                android:src="@drawable/im_society_bg" />

            <TextView
                android:id="@+id/tv_weichat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="10dp"
                android:text="乔 硕"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_head_001"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shadow"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="bottom|end"
                android:elevation="5dp"
                android:src="@drawable/touxiang2" />

        </FrameLayout>

<FrameLayout
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/society_bg">
        <ImageButton
            android:id="@+id/iv_left38"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/photoprocess_ic_back" />
</FrameLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="220dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <ImageView
            android:layout_width="40dp"
                   android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
                   android:elevation="5dp"
            android:src="@drawable/touxiang1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <TextView
            android:id="@+id/tv_weichat_name01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
            android:text="王 馨 妍"
            android:textColor="#B57777"
            android:textSize="14dp"
            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="55dp"
                                android:text="#分 享 色 卡"
                                android:textColor="#BCA3A3"
                                android:textSize="12dp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_head_003"
                                android:layout_width="130dp"
                                android:layout_margin="5dp"
                                android:layout_height="140dp"
                                android:src="@drawable/seka2"
                                android:scaleType="fitXY" />
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_margin="5dp"
                                    android:layout_height="140dp"
                                    android:src="@drawable/seka4"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="55dp"
                                android:text="30 分 钟 前"
                                android:textColor="#BCA3A3"
                                android:textSize="12dp" />
                        </LinearLayout>
//
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#C4C4C4"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:elevation="5dp"
                    android:src="@drawable/touxiang2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_weichat_name02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="10dp"
                        android:text="乔  硕"
                        android:textColor="#B57777"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:text="#分 享 色 卡"
                            android:textColor="#BCA3A3"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_head_004"
                                android:layout_width="130dp"
                                android:layout_margin="5dp"
                                android:layout_height="140dp"
                                android:src="@drawable/seka3"
                                android:scaleType="fitXY" />
                            <ImageView
                                android:layout_width="130dp"
                                android:layout_margin="5dp"
                                android:layout_height="140dp"
                                android:src="@drawable/seka5"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_weichat_name04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:text="40 分 钟 前"
                            android:textColor="#BCA3A3"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#C4C4C4"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_head_002"
                    android:layout_width="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:elevation="5dp"
                    android:src="@drawable/touxiang3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="10dp"
                        android:text="邓 宇 扬"
                        android:textColor="#B57777"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:text="#分 享 色 卡"
                            android:textColor="#BCA3A3"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_margin="5dp"
                                android:layout_height="140dp"
                                android:src="@drawable/seka6"
                                android:scaleType="fitXY" />
                            <ImageView
                                android:layout_width="130dp"
                                android:layout_margin="5dp"
                                android:layout_height="140dp"
                                android:src="@drawable/seka7"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:text="30 分 钟 前"
                            android:textColor="#BCA3A3"
                            android:textSize="12dp" />
                    </LinearLayout>
                    //
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#C4C4C4"/>
        </LinearLayout>
</ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>