<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jianbianyello"
    tools:context=".MusicColor">

    <!-- 波形背景 -->
    <ImageView
        android:id="@+id/waveform_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/main_im_bottom" />

    <!-- 渐变背景 -->
    <ImageView
        android:id="@+id/bg_top"
        android:layout_width="410dp"
        android:layout_height="451dp"
        android:layout_gravity="top|center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/jianbianpink" />

    <!-- 主内容容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="返回"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="100dp"
                android:text="音乐感色"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 颜色按钮区域 -->

        <!-- 亮度调节 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- 第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_red"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#F6BABA"
                    android:background="@drawable/circlue"
                    android:text="红"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_orange"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#F7D4B4"
                    android:background="@drawable/circlue"
                    android:text="橙"
                    android:elevation="100dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_yellow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#F2F1BB"
                    android:background="@drawable/circlue"
                    android:text="黄"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_green"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#D6F0C8"
                    android:background="@drawable/circlue"
                    android:text="绿"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 第二行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cyan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#B8E9EB"
                    android:background="@drawable/circlue"
                    android:text="青"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_blue"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#C7D6F0"
                    android:background="@drawable/circlue"
                    android:text="蓝"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_purple"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#DCCBF1"
                    android:background="@drawable/circlue"
                    android:text="紫"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pink"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#F7D6F3"
                    android:background="@drawable/circlue"
                    android:text="粉"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 第三行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_brown"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#E8D2BF"
                    android:background="@drawable/circlue"
                    android:text="棕"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- 黑色按钮 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_black"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#AEAEAE"
                    android:background="@drawable/circlue"
                    android:text="黑"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- 白色按钮 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_white"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#FFFFFF"
                    android:background="@drawable/circlue"
                    android:text="白"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- 彩虹按钮 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_rainbow"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rainbow"
                    android:scaleType="centerCrop"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:text="亮度"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBar_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="30dp"
                android:progressBackgroundTint="@color/gray_300"
                android:progressTint="@color/blue_500"
                android:splitTrack="false"
                android:thumbTint="@color/blue_700" />


        </LinearLayout>

        <!-- 播放按钮组 -->
        <TextView
            android:id="@+id/tv_instruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:layout_gravity="center_horizontal"
            android:text="使用硬件，收集你想感受的颜色"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <!-- 左侧占位 -->
            <Space
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_weight="0.2" />

            <!-- 主播放按钮 -->

            <!-- 中间间距 -->

            <!-- 副播放按钮 -->

            <!-- 右侧占位 -->
            <View
                android:id="@+id/btn_play"
                android:layout_width="122dp"
                android:layout_height="127dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/display_kuang"
                android:contentDescription="颜色显示"
                android:scaleType="centerCrop"
                android:elevation="3dp"/>

            <ImageButton
                android:id="@+id/btn_play2"
                android:layout_width="122dp"
                android:layout_height="127dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:contentDescription="播放"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_play_pause" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

        </LinearLayout>

        <!-- 底部输入栏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/kuang"
                android:hint="请输入你想感受的颜色"
                app:boxBackgroundMode="none"
                app:counterEnabled="false"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:textColor="#CC000000"
                    android:textColorHint="#99FFFFFF"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_voice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="语音输入"
                android:scaleType="centerInside"
                android:src="@drawable/microphone" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <!-- 说明文字 -->
    </LinearLayout>
</FrameLayout>